@model AddEmployeeViewModel

@{
    ViewBag.Title = "Add Employee";
}

<h1 class="text-center">Add Employee Profile</h1>

<form enctype="multipart/form-data" asp-controller="home" asp-action="add" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input style="background-color:transparent;" asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select style="background-color:transparent;" asp-for="Gender" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Gen>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Role" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input style="background-color:transparent;" asp-for="Role" class="form-control" placeholder="Role">
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input style="background-color:transparent;" asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Contact" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input style="background-color:transparent;" asp-for="Contact" class="form-control" placeholder="Contact">
            <span asp-validation-for="Contact" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Office" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input style="background-color:transparent;" asp-for="Office" class="form-control" placeholder="Office">
            <span asp-validation-for="Office" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" accept="image/*">
                <label style="background-color:transparent;" class="custom-file-label">Choose your profile image...</label>
            </div>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-outline-primary" style="width:auto">Add</button>
            <a asp-action="index" asp-controller="home" class="btn btn-outline-primary">Cancel</a>
        </div>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>

