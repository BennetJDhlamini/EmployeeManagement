@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<form asp-action="CreateRole" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div style="background-color:transparent;" class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input style="background-color:transparent;" asp-for="RoleName" class="form-control" placeholder="Name">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div style="background-color:transparent;" class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-outline-primary" title="Create Role" style="width:auto">
                Create Role
            </button>
        </div>
    </div>
</form>
