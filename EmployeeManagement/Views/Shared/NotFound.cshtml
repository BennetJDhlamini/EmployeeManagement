@{
    ViewBag.Title = "Not Found";
}

@if (ViewBag.ErrorTitle == null)
{
    <div class="alert alert-danger mt-1 mb-1">
        <h1 class="text-danger">@ViewBag.ErrorMessage</h1>

        @* <h1 class="text-danger">@ViewBag.Path</h1>

            <h1 class="text-danger">@ViewBag.QS</h1>*@
    </div>
}
else
{
    <h1 class="text-danger">@ViewBag.ErrorTitle</h1>
    <h6 class="text-danger">@ViewBag.ErrorMessage</h6>
}

<a asp-action="index" asp-controller="home" class="btn btn-outline-success" style="width:auto">Click here to navigate to the home page</a>

